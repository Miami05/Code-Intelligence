       IDENTIFICATION DIVISION.
       PROGRAM-ID. INVENTORY-MANAGER.
       
       DATA DIVISION.
       WORKING-STORAGE SECTION.
       01  PRODUCT-TABLE.
           05 PRODUCT OCCURS 100 TIMES.
              10 PRODUCT-CODE       PIC X(10).
              10 PRODUCT-NAME       PIC X(30).
              10 QUANTITY           PIC 9(5).
              10 UNIT-PRICE         PIC 9(5)V99.
              10 REORDER-LEVEL      PIC 9(4).
       
       01  CURRENT-INDEX            PIC 9(3) VALUE 1.
       01  TOTAL-VALUE              PIC 9(10)V99 VALUE ZEROS.
       
       PROCEDURE DIVISION.
       MAIN-ROUTINE.
           PERFORM ADD-PRODUCT
           PERFORM CHECK-INVENTORY-LEVELS
           PERFORM CALCULATE-INVENTORY-VALUE
           STOP RUN.
       
       ADD-PRODUCT.
           MOVE "PROD001" TO PRODUCT-CODE(CURRENT-INDEX)
           MOVE "LAPTOP COMPUTER" TO PRODUCT-NAME(CURRENT-INDEX)
           MOVE 50 TO QUANTITY(CURRENT-INDEX)
           MOVE 999.99 TO UNIT-PRICE(CURRENT-INDEX)
           MOVE 10 TO REORDER-LEVEL(CURRENT-INDEX)
           ADD 1 TO CURRENT-INDEX.
       
       CHECK-INVENTORY-LEVELS.
           PERFORM VARYING CURRENT-INDEX FROM 1 BY 1
               UNTIL CURRENT-INDEX > 100
               IF QUANTITY(CURRENT-INDEX) < REORDER-LEVEL(CURRENT-INDEX)
                   DISPLAY "REORDER ALERT: " PRODUCT-NAME(CURRENT-INDEX)
               END-IF
           END-PERFORM.
       
       CALCULATE-INVENTORY-VALUE.
           PERFORM VARYING CURRENT-INDEX FROM 1 BY 1
               UNTIL CURRENT-INDEX > 100
               COMPUTE TOTAL-VALUE = TOTAL-VALUE + 
                   (QUANTITY(CURRENT-INDEX) * UNIT-PRICE(CURRENT-INDEX))
           END-PERFORM
           DISPLAY "Total Inventory Value: $" TOTAL-VALUE.

